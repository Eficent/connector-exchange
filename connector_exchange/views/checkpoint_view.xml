<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record id="view_connector_checkpoint_sync_session_form" model="ir.ui.view">
            <field name="name">connector.checkpoint.sync_session.form</field>
            <field name="model">connector.checkpoint</field>
            <field name="inherit_id" ref="connector.view_connector_checkpoint_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='backend_id']" position="after">
                    <field name="sync_session_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_connector_checkpoint_sync_session_tree" model="ir.ui.view">
            <field name="name">connector.checkpoint.sync_session.tree</field>
            <field name="model">connector.checkpoint</field>
            <field name="inherit_id" ref="connector.view_connector_checkpoint_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='backend_id']" position="after">
                    <field name="sync_session_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_connector_checkpoint_sync_session_search" model="ir.ui.view">
            <field name="name">connector.checkpoint.sync_session.search</field>
            <field name="model">connector.checkpoint</field>
            <field name="inherit_id" ref="connector.view_connector_checkpoint_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[contains(@context, 'group_by')]" position="after">
                    <filter string="Session Sync" context="{'group_by' : 'sync_session_id'}" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
